<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/rectangle">
    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:src="@mipmap/arrow"
           />
    </LinearLayout>

<RelativeLayout
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true">
    <TextView
        android:textSize="20sp"
        android:textColor="@color/qlColorTextRed"
        android:id="@+id/tv_tel_begin"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+86"/>
    <View
        android:id="@+id/line"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tv_tel_begin"
        android:layout_width="1dp"
        android:layout_height="20dp"
        android:background="@color/qlColorTextRed"
         />
    <EditText
        android:gravity="center_vertical"
        android:background="@android:color/transparent"
        android:textSize="20sp"
        android:textColorHint="@color/light_black"
        android:textColor="@color/qlColorTextRed"
        android:layout_toRightOf="@+id/line"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:hint="请输入手机号"

        />

</RelativeLayout>

    <View
        android:id="@+id/line1"
        android:layout_below="@+id/rl"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/qlColorDivider"
        />
    <EditText
        android:textColorHint="@color/light_black"
        android:id="@+id/pwd"
        android:hint="请输入登录密码"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/transparent"
        android:layout_below="@id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/line2"
        android:layout_below="@+id/pwd"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/qlColorDivider"
        />
    <TextView
        android:layout_below="@+id/line2"
        android:textSize="20sp"
        android:textColor="@color/qlColorTextRed"
        android:id="@+id/tv_infomation"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="如忘记密码，请联系官方客服帮忙解决"/>
    <Button

        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/tv_infomation"
        android:id="@+id/btn_commit"
        android:background="#AE5800"
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <TextView
        android:textColor="@color/qlColorTextRed"
        android:layout_below="@+id/btn_commit"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:id="@+id/tv_regist"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即注册"/>


</RelativeLayout>
